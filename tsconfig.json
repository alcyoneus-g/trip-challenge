{
  "compilerOptions": {
    "incremental": true,
    "target": "ES2016",
    "module": "commonjs",
    "lib": ["ES2016", "ES2020.BigInt"],
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "./build",
    "rootDir": "./src",
    "strict": true,
    "types": ["jest"],
    "esModuleInterop": true,
    "experimentalDecorators": true,
    "emitDecoratorMetadata": true,
    "skipLibCheck": true,
    "forceConsistentCasingInFileNames": true
  }
}
